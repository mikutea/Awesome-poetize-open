<!DOCTYPE html>
<html lang="<%= lang || 'zh' %>">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>

  <% if (meta) { Object.keys(meta).forEach(function(key){ %>
    <% if (key === 'title') { return; } %>
    <% if (key === 'description' || key === 'keywords' || key === 'author') { %>
      <meta name="<%= key %>" content="<%= meta[key] %>">
    <% } else if (key === 'canonical') { %>
      <link rel="canonical" href="<%= meta[key] %>">
    <% } else if (key.startsWith('hreflang')) { %>
      <%- meta[key] %>
    <% } else { %>
      <meta property="<%= key %>" content="<%= meta[key] %>">
    <% } %>
  <% }); } %>

  <!-- 引入现有静态资源，保持与 SPA 一致 -->
  <% if (assets && assets.vendorCss) { %>
    <link rel="stylesheet" href="<%= assets.vendorCss %>">
  <% } %>
  <% if (assets && assets.css) { %>
    <link rel="stylesheet" href="<%= assets.css %>">
  <% } %>
</head>
<body>
  <div id="app">
    <main class="article-detail">
      <%- content %>
    </main>
  </div>

  <!-- 加载现有前端脚本，确保客户端可继续交互 -->
  <% if (assets && assets.vendorJs) { %>
    <script src="<%= assets.vendorJs %>" defer></script>
  <% } %>
  <% if (assets && assets.js) { %>
    <script src="<%= assets.js %>" defer></script>
  <% } %>
</body>
</html> 