<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ld.poetry.dao.WebInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ld.poetry.entity.WebInfo">
        <id column="id" property="id"/>
        <result column="web_name" property="webName"/>
        <result column="web_title" property="webTitle"/>
        <result column="notices" property="notices"/>
        <result column="footer" property="footer"/>
        <result column="background_image" property="backgroundImage"/>
        <result column="avatar" property="avatar"/>
        <result column="random_avatar" property="randomAvatar"/>
        <result column="random_name" property="randomName"/>
        <result column="random_cover" property="randomCover"/>
        <result column="waifu_json" property="waifuJson"/>
        <result column="status" property="status"/>
        <result column="enable_waifu" property="enableWaifu"/>
        <result column="waifu_display_mode" property="waifuDisplayMode"/>
        <result column="home_page_pull_up_height" property="homePagePullUpHeight"/>
        <result column="api_enabled" property="apiEnabled"/>
        <result column="api_key" property="apiKey"/>
        <result column="nav_config" property="navConfig"/>
        <result column="footer_background_image" property="footerBackgroundImage"/>
        <result column="footer_background_config" property="footerBackgroundConfig"/>
        <result column="email" property="email"/>
        <result column="minimal_footer" property="minimalFooter"/>
        <result column="enable_auto_night" property="enableAutoNight"/>
        <result column="auto_night_start" property="autoNightStart"/>
        <result column="auto_night_end" property="autoNightEnd"/>
        <result column="enable_gray_mode" property="enableGrayMode"/>
        <result column="enable_dynamic_title" property="enableDynamicTitle"/>
        <result column="mobile_drawer_config" property="mobileDrawerConfig"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, web_name, web_title, notices, footer, background_image, avatar, random_avatar, random_name, random_cover,
        waifu_json, status, enable_waifu, waifu_display_mode, home_page_pull_up_height, api_enabled, api_key, nav_config,
        footer_background_image, footer_background_config, email, minimal_footer, enable_auto_night,
        auto_night_start, auto_night_end, enable_gray_mode, enable_dynamic_title, mobile_drawer_config
    </sql>

    <!-- 更新基本网站信息（不包括公告、随机名称等专门管理的字段） -->
    <update id="updateWebInfoById">
        UPDATE web_info
        <set>
            <!-- 必填字段：只有非空时才更新 -->
            <if test="webName != null and webName != ''">
                web_name = #{webName},
            </if>
            <if test="webTitle != null and webTitle != ''">
                web_title = #{webTitle},
            </if>
            <if test="siteAddress != null">
                site_address = #{siteAddress},
            </if>
            
            <!-- 基本信息字段：允许空值覆盖（只要不是null就更新） -->
            <if test="footer != null">
                footer = #{footer},
            </if>
            <if test="backgroundImage != null">
                background_image = #{backgroundImage},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="waifuJson != null">
                waifu_json = #{waifuJson},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="enableWaifu != null">
                enable_waifu = #{enableWaifu},
            </if>
            <if test="waifuDisplayMode != null">
                waifu_display_mode = #{waifuDisplayMode},
            </if>
            <if test="homePagePullUpHeight != null">
                home_page_pull_up_height = #{homePagePullUpHeight},
            </if>
            <if test="apiEnabled != null">
                api_enabled = #{apiEnabled},
            </if>
            <if test="apiKey != null">
                api_key = #{apiKey},
            </if>
            <if test="navConfig != null">
                nav_config = #{navConfig},
            </if>
            <if test="footerBackgroundImage != null">
                footer_background_image = #{footerBackgroundImage},
            </if>
            <if test="footerBackgroundConfig != null">
                footer_background_config = #{footerBackgroundConfig},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="minimalFooter != null">
                minimal_footer = #{minimalFooter},
            </if>
            <if test="enableAutoNight != null">
                enable_auto_night = #{enableAutoNight},
            </if>
            <if test="autoNightStart != null">
                auto_night_start = #{autoNightStart},
            </if>
            <if test="autoNightEnd != null">
                auto_night_end = #{autoNightEnd},
            </if>
            <if test="enableGrayMode != null">
                enable_gray_mode = #{enableGrayMode},
            </if>
            <if test="enableDynamicTitle != null">
                enable_dynamic_title = #{enableDynamicTitle},
            </if>
            <if test="mobileDrawerConfig != null">
                mobile_drawer_config = #{mobileDrawerConfig},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 只更新公告 -->
    <update id="updateNoticesOnly">
        UPDATE web_info SET notices = #{notices} WHERE id = #{id}
    </update>

    <!-- 只更新随机名称 -->
    <update id="updateRandomNameOnly">
        UPDATE web_info SET random_name = #{randomName} WHERE id = #{id}
    </update>

    <!-- 只更新随机头像 -->
    <update id="updateRandomAvatarOnly">
        UPDATE web_info SET random_avatar = #{randomAvatar} WHERE id = #{id}
    </update>

    <!-- 只更新随机封面 -->
    <update id="updateRandomCoverOnly">
        UPDATE web_info SET random_cover = #{randomCover} WHERE id = #{id}
    </update>

</mapper>
